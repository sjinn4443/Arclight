{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Arclight_App on Local 3000",
      "program": "${workspaceFolder}/server.js",
      "cwd": "${workspaceFolder}",
      "runtimeArgs": ["--inspect-brk"],
      "port": 9229,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "PORT": "3000"
      }
    }
  ]
}
